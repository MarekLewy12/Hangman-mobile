<?xml version='1.0' encoding='utf-8'?>
<widget id="com.marolewy.hangman" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Hangman by Maro</name>
    <description>Gra w wisielca z różnymi poziomami trudności</description>
    <author href="https://github.com/MarekLewy12">
        Marek Lewandowski
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <!-- Dodatkowe ustawienia -->
    <preference name="Orientation" value="portrait" />
    <preference name="Fullscreen" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="SplashScreenDelay" value="3000" />

    <!-- Ikony dla Android -->
    <platform name="android">
        <icon src="res/android/icon/icon-36-ldpi.png" density="ldpi" />
        <icon src="res/android/icon/icon-48-mdpi.png" density="mdpi" />
        <icon src="res/android/icon/icon-72-hdpi.png" density="hdpi" />
        <icon src="res/android/icon/icon-96-xhdpi.png" density="xhdpi" />
        <icon src="res/android/icon/icon-144-xxhdpi.png" density="xxhdpi" />
        <icon src="res/android/icon/icon-192-xxxhdpi.png" density="xxxhdpi" />
    </platform>
</widget>